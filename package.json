{
  "name": "mirror",
  "version": "0.0.0",
  "description": "Secure medical audio transcription and analysis platform",
  "private": true,
  "scripts": {
    "dev:frontend": "powershell -ExecutionPolicy Bypass -File scripts\\dev-frontend.ps1",
    "dev:backend": "powershell -ExecutionPolicy Bypass -File scripts\\dev-backend.ps1",
    "build:frontend": "powershell -ExecutionPolicy Bypass -File scripts\\build-frontend.ps1",
    "build:backend": "powershell -ExecutionPolicy Bypass -File scripts\\build-backend.ps1",
    "build": "npm run build:backend && npm run build:frontend",
    "install:all": "powershell -ExecutionPolicy Bypass -File scripts\\install-deps.ps1",
    "clean": "powershell -ExecutionPolicy Bypass -File scripts\\clean.ps1",
    "zip": "powershell -Command \"cd backend; if (Test-Path function.zip) { Remove-Item function.zip -Force }; Compress-Archive -Path 'dist\\*' -DestinationPath 'function.zip' -Force; Write-Host 'ZIP created successfully'; cd ..\"",
    "dev:local": "powershell -ExecutionPolicy Bypass -File scripts\\dev-local.ps1",
    "setup-aws": "powershell -ExecutionPolicy Bypass -File scripts\\setup-aws-cli.ps1",
    "set-env": "powershell -ExecutionPolicy Bypass -File scripts\\set-env.ps1",
    "setup": "powershell -ExecutionPolicy Bypass -File scripts\\deploy-to-aws.ps1 -Action build"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "medical",
    "transcription",
    "aws",
    "lambda",
    "react",
    "terraform"
  ],
  "author": "Mirror Team",
  "license": "MIT"
} 